          },
          "string.special.symbol": {
            "color": "${color10}",
            "font_style": "normal",
            "font_weight": "normal"
          },
          "tag": {
            "color": "${color2}",
            "font_style": "normal",
            "font_weight": "normal"
          },
          "text.literal": {
            "color": "${color10}",
            "font_style": "normal",
            "font_weight": "normal"
          },
          "variable": {
            "color": "${foreground}",
            "font_style": "normal",
